<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_website_shift_swap_config" model="ir.ui.view">
        <field name="name">Website shift swap settings</field>
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="beesdoo_website_shift.view_website_shift_config_irregular"
        />
        <field name="arch" type="xml">
            <div id="shift_general_settings" position="inside">
                <div
                    id="request_number_limit_settings"
                    class="col-12 col-md-6 o_setting_box"
                >
                    <div class="o_setting_right_pane">
                        <label for="request_number_limit" />
                        <span
                            class="fa fa-lg fa-globe"
                            title="Values set here are website-specific."
                            groups="website.group_multi_website"
                        />
                        <div class="mt8">
                            <field name="request_number_limit" />
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
