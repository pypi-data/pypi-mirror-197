<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t
        t-name="OrderReceipt"
        t-inherit="point_of_sale.OrderReceipt"
        t-inherit-mode="extension"
        owl="1"
    >
        <xpath expr="//t[@t-log='receipt']/parent::t" position="attributes">
            <attribute
                name="t-if"
            >"(env.pos.config.iface_l10n_es_simplified_invoice or env.pos.config.pos_sequence_by_device) and !receipt.to_invoice"</attribute>
        </xpath>
        <xpath expr="//div[hasclass('pos-receipt-order-data')]" position="attributes">
            <attribute
                name="t-if"
            >!(env.pos.config.iface_l10n_es_simplified_invoice or env.pos.config.pos_sequence_by_device) or receipt.is_to_invoice</attribute>
        </xpath>
    </t>
</templates>
